# ============================================================
# OpenCode Platform - Environment Configuration
# ============================================================
# Usage: copy this file to .env and fill in your values
# ============================================================

# ------------------------------------------------------------
# LLM Providers (at least one required)
# ------------------------------------------------------------

# OpenAI (primary) - used for chat, reasoning, code generation
OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4o
PLANNER_MODEL=gpt-4o-mini

# Anthropic (fallback) - Claude as LLM fallback when OpenAI fails
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Google Gemini (fallback) - third-tier LLM fallback
# GEMINI_API_KEY=your-google-api-key-here
# GEMINI_MODEL=gemini-2.0-flash

# Fallback chain: OpenAI -> Anthropic -> Gemini
# Only the first available provider is used per request.

# ------------------------------------------------------------
# Embedding Provider
# ------------------------------------------------------------

# Cohere (recommended) - multilingual embeddings + reranking
COHERE_API_KEY=your-cohere-api-key-here
EMBEDDING_PROVIDER=cohere
COHERE_EMBED_MODEL=embed-multilingual-v3.0

# OpenAI embedding (automatic fallback if Cohere unavailable)
OPENAI_EMBED_MODEL=text-embedding-3-small

# ------------------------------------------------------------
# Web Search (optional, improves search mode)
# ------------------------------------------------------------

# Tavily (preferred) - AI-optimized search
# TAVILY_API_KEY=tvly-your-tavily-api-key-here

# Serper (fallback) - Google search via serper.dev
# SERPER_API_KEY=your-serper-api-key-here

# If no search API key is set, falls back to DuckDuckGo (free, no key needed)

# ------------------------------------------------------------
# Qdrant Vector Database
# ------------------------------------------------------------

QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=rag_knowledge_base

# ------------------------------------------------------------
# Authentication
# ------------------------------------------------------------

# JWT secret (MUST change in production)
JWT_SECRET_KEY=opencode-super-secret-key-change-in-production
JWT_EXPIRE_MINUTES=1440

# Default admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ------------------------------------------------------------
# Server
# ------------------------------------------------------------

API_HOST=0.0.0.0
API_PORT=8888

# ------------------------------------------------------------
# Logging & Debug
# ------------------------------------------------------------

DEBUG=false
LOG_LEVEL=INFO

# ------------------------------------------------------------
# Optional Services
# ------------------------------------------------------------

# Redis (distributed cache, uses local cache if not set)
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Cost tracking
# DAILY_BUDGET=10.0
# MONTHLY_BUDGET=100.0
