{
  "id": "stock-analyst",
  "name": "股票分析師",
  "version": "1.0.0",
  "description": "分析股票數據、提供投資建議的專業 Agent",
  "author": "OpenCode Team",
  "type": "agent",
  "entry_point": "main",
  "class_name": "StockAnalystPlugin",
  
  "config_schema": {
    "api_key": {
      "type": "string",
      "label": "Yahoo Finance API Key",
      "required": false,
      "secret": true,
      "description": "可選的 API Key"
    },
    "default_market": {
      "type": "select",
      "label": "預設市場",
      "options": ["TW", "US", "HK", "JP"],
      "default": "TW"
    },
    "analysis_depth": {
      "type": "select", 
      "label": "分析深度",
      "options": ["basic", "standard", "detailed"],
      "default": "standard"
    }
  },
  
  "permissions": ["network"],
  
  "dependencies": ["yfinance", "pandas"],
  
  "tags": ["finance", "analysis", "stock"]
}
